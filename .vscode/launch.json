    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run upower_logger",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/upower_logger.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },

        {
            "name": "Python: Run upower_logger with Log, JSON, and SQLite files",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/upower_logger.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--log-file",
                "${workspaceFolder}/upower_logger.log",

                "--json-file",
                "${workspaceFolder}/upower_logger.json",

                "--sqlite-file",
                "${workspaceFolder}/upower_logger.sqlite"
            ]
        }
    ]
}